<div class="container">
  <h2>Categories</h2>
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <% @c.each do |category| %>
        <div class="category">
          <div class="row">
            <div class="col-lg-4 col-md-4">
              <%= category.name %>
            </div>
            <div class="col-lg-4 col-md-4">
              <%= link_to 'Edit', edit_category_path(id:category.id), class:"btn btn-default" %>
              <%= link_to 'Delete', category,  method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default", disabled: can_delete_category?(category) %>
            </div>
          </div>
        </div>
      <%end%>
      <div class="row">
        <p>
          <%=link_to 'Add New Category', :new_category, class: "btn btn-default" %>
        </p>
      </div>
      <div class="row">
        <p>
          <%= link_to 'Done', :profile_users, class: 'btn btn-default', method: :get %>
        </p>
      </div>
    </div>
  </div>
</div>
