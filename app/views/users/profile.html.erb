<div class="container">
  <p class="profile-email">You is
    <b><%= current_user.email %></b>
    <br/>
  </p>
  <p class="profile-name">You Zendesk email:
    <b><%= current_user.zendesk_email %></b>
  </p>
  <div class="row ticket">
    <div class="col-lg-6 col-md-6 pull-right">
      <%= form_for(:sent_email, :html=>{class:'form-group'}, url: '/users/sent_email') do |f| %>
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <div class="row">
              <% current_user.categories.each do |category| %>
                <div class="col-lg-6 col-md-6">
                  <div class="message-category">
                    <label>
                      <%= f.radio_button("category",category.name ) %>
                      <%= category.name %>
                    </label>
                  </div>
                </div>
              <%end%>
            </div>
            <div class="row">
              <div class="col-lg-6 col-md-6 pull-right">
                <%=link_to 'Change categories?', :categories, class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <div class="row">
              <% current_user.action_messages.each do |action| %>
                  <div class="col-lg-6 col-md-6">
                    <div class="message-action">
                      <label>
                        <%= f.radio_button("action",action.recipient) %>
                        <%= action.name %>
                      </label>
                    </div>
                  </div>
              <%end%>
            </div>
            <div class="row">
              <div class="col-lg-6 col-md-6 pull-right">
                <%=link_to 'Change Actions?', :action_messages, class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12 col-md-12 margin-top">
            <%= f.text_area :email_text, placeholder:'Email text', class:'form-control'%>
            <!--<textarea class="form-control"></textarea>-->
          </div>
        </div>
        <div class="row">
          <%= f.submit 'Send Email', class:'btn btn-default pull-right margin-top' %>
        </div>
      <%end%>


      <div class="row text-right">
        <div class="col-lg-12 col-md-12 margin-top">
          <button class="btn btn-success" onclick="prev()">Previous</button>
          <button class="btn btn-success" onclick="next()">Next</button>
        </div>
      </div>
    </div>
  </div>

</div>