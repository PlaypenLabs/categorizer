<div class="container">
  <h2>Actions</h2>
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <% @a.each do |action| %>
          <div class="category">
            <div class="row">
              <div class="col-lg-4 col-md-4">
                <%= action.name %>
              </div>
              <div class="col-lg-4 col-md-4">
                <%= link_to 'Edit', edit_action_message_path(id:action.id), class:"btn btn-default" %>
                <%= link_to 'Delete', action,  method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %>
              </div>
            </div>
          </div>
      <%end%>
      <%=link_to 'Add New Category', :new_action_message, class: "btn btn-default" %>
    </div>
  </div>
</div>